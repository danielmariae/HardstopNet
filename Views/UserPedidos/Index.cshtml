@model IEnumerable<HardstopNet.Models.Pedido>

@{
    ViewBag.Title = "Meus Pedidos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Meus Pedidos</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID do Pedido</th>
            <th>Data</th>
            <th>Status</th>
            <th>Valor</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pedido in Model)
        {
            <tr>
                <td>@pedido.PedidoId</td>
                <td>@pedido.HorarioPedido.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@pedido.StatusPedido</td>
                <td>R$ @pedido.Pagamento.ValorPagamento.ToString("F2")</td>
                <td>
                    @Html.ActionLink("Detalhes", "Details", new { id = pedido.PedidoId }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>
